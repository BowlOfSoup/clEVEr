<div class="modal fade" id="discordAuthModal" tabindex="-1" role="dialog" aria-labelledby="discordAuthModalLabel" aria-hidden="true"
     data-target="{{ app.request.schemeAndHttpHost ~ app.request.baseUrl }}{{ path('discord_auth') }}">

    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="discordAuthModalLabel">Discord authentication</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>